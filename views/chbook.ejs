<!DOCTYPE HTML>
<html>
	<head>
		<title>書贏●交換</title>
		<%- include('./partials/header.ejs') %>
	<body class="homepage is-preload">
		<div id="page-wrapper">

			<!-- Header -->
			<section id="header">
				<div class="container">
					
					<!-- Logo -->
						<h1 id="logo"><a href="/wishlist">書贏●二手書交換</a></h1>
						<%- include('./partials/nav.ejs') %>		
	
					<!-- Main -->
			<section id="main">
				<div class="container">
					<div class="row">

						<%- include('./partials/mempart.ejs') %>
										</ul>
									</section>
							</div>
					<!-- Content -->
					
							<!-- Post -->
								<article class="box post">
									<header>
										<h1 style="height: 60px;"><font size=8>二手書交換</font></h1>
									</header>
									<form action="/chbook/add" method="POST">
										<a>書名:</a>
										<div style="height: 60px; width: 265px;" class="box post">
											<input  type="text" id="ch_name" placeholder="書名" size=20 autocomplete="on" name="ch_name">
										</div>
										<a>地址:</a>
										<div style="height: 60px; width: 265px;" class="box post">
											<input type="text" id="address" placeholder="收件地址" size=20 autocomplete="off" name="address">
										</div>
										<a>書況:</a>
										<div style="height: 60px; width: 265px;" class="box post" id="bookcondition" >
											<select name="bookcondition">
												<option>請選擇書籍狀況</option>
												<option value="全新">全新</option>
												<option value="7成~9成">7成~9成</option>
												<option value="5成~7成">5成~7成</option>	
											</select>
										</div>
										<a>價格區間:</a>
										<div style="height: 60px; width: 265px;" class="box post" id="bookprice" >
											<select name="bookprice">
												<option>選擇價格區間</option>
												<option value="1000up">1000up</option>
												<option value="701~999">701~999</option>
												<option value="501~700">501~700</option>
												<option value="301~500">301~500</option>
												<option value="0~300">0~300</option>	
											</select>
										</div>
										<div class="display-flex">
											<div class="box post" id="exchangebutton">
												<input type="submit" value="交換">
											</div>
											<a>&nbsp</a>
											<div class="box post" id="resetbutton">
												<input type="reset" value="清除">
											</div>
										</div>
										
										
										
									</form>	
								</article>
									
				</div>
			</section>

							
			<!-- Footer -->
			<%- include('./partials/footer.ejs') %>
		</div>

		<!-- Scripts -->
		<script src="../static/js/jquery.min.js"></script>
		<script src="../static/js/jquery.dropotron.min.js"></script>
		<script src="../static/js/browser.min.js"></script>
		<script src="../static/js/breakpoints.min.js"></script>
		<script src="../static/js/util.js"></script>
		<script src="../static/js/main.js"></script>

	</body>
</html>