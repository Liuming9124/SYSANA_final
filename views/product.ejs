<!DOCTYPE HTML>
<html>
	<head>
		<title>書贏●商品頁面</title>
		<%- include('./partials/header.ejs') %>
	<body class="homepage is-preload">
		<div id="page-wrapper">

			<!-- Header -->
			<section id="header">
				<div class="container">
					
					<!-- Logo -->
						<h1 id="logo"><a href="/product">書贏●二手書回收</a></h1>
						<%- include('./partials/nav.ejs') %>
	
					<!-- Main -->
			<section id="main">
				<section>
					<ul class="divided">
						<li>

							<!-- Highlight -->
								<article class="box highlight">
									<a href="#" class="image left">
										<img src="/static/BookImg/<%= result.book_img %>" alt="" height="500px" width="500px" />
									</a>
									<header><h3><a href="../product/product.html" class="name" id="name"><%= result.book_name %></a></h3></header>
									<div class="display-flex">
										<p>書籍編號：</p>	
										<a class="bid" id="bid"><%= result.book_id %></p>
									</div>
									<div class="display-flex">
										<p>作者：</p>	
										<a class="writer" id="writer"><%= result.book_author %></p>
									</div>
									<div class="display-flex">
										<p>價錢：</p>	
										<a class="price" id="price"><%= result.book_price %></p>
									</div>		
									<p><%= result.book_intro %></p>
									<ul class="actions">
										<div class="display-flex">
												<div id="addcollect" class="col-8 col-12-medium imp-medium"><a href="/collect/add/<%= result.book_id %> " class="button style1 large">加入收藏</a></div>
												<a>&nbsp</a>
												<div id="addcart" class="col-8 col-12-medium imp-medium"><a href="/cart/add/<%= result.book_id %> " class="button style2 large">加入購物車</a></div>
										</div>
									</ul>
								</article>
								<div id="addcart" class="col-8 col-12-medium imp-medium"><a href="/cart/add/<%= result.book_id %> " class="button style2 large">購買</a></div>
								</li></div>
					</ul>
				</section>	
			</section>

							
			<!-- Footer -->
			<%- include('./partials/footer.ejs') %>	
		</div>

		<!-- Scripts -->
		<script src="../static/js/jquery.min.js"></script>
		<script src="../static/js/jquery.dropotron.min.js"></script>
		<script src="../static/js/browser.min.js"></script>
		<script src="../static/js/breakpoints.min.js"></script>
		<script src="../static/js/util.js"></script>
		<script src="../static/js/main.js"></script>

	</body>
</html>