<!DOCTYPE HTML>
<html>
	<head>
		<title>書贏●我的收藏</title>
		<%- include('./partials/header.ejs') %>
	<body class="homepage is-preload">
		<div id="page-wrapper">

			<!-- Header -->
			<section id="header">
				<div class="container">
					
					<!-- Logo -->
						<h1 id="logo"><a href="../collect/collect.html">書贏●我的收藏</a></h1>
						<%- include('./partials/nav.ejs') %>
	
					<!-- Main -->
				<section id="main">
					<div class="container">
						<div class="row">

							<!-- Sidebar -->
								<div id="sidebar" class="col-4 col-12-medium">

										<section>
											<ul class="divided">
												<li>

													<!-- Excerpt -->
														<article class="box excerpt">
															<header>
																<span class="date" href="../cart/cart.html">我的購物車</span>
																<h3><a href="../cart/cart.html">快來把商品帶回家</a></h3>
															</header>
														</article>

												</li>

												<li>
													<!-- Excerpt -->
														<article class="box excerpt">
															<header>
																<span class="date" href="../collect/collect.html">我的收藏</span>
																<h3><a href="../collect/collect.html">快來把收藏加入購物車</a></h3>
															</header>
														</article>

												</li>

												<li>
													<!-- Excerpt -->
														<article class="box excerpt">
															<header>
																<span class="date" href="../order/order.html">我的訂單</span>
																<h3><a href="../order/order.html">查看我的訂單</a></h3>
															</header>
														</article>

												</li>
												
										</section>
								</div>

							<!-- Content -->
								<div id="content" class="col-8 col-12-medium imp-medium">
									<!-- Post -->
										<article class="box post">
											<%if (howmanybook) { %>
												<% for(var i=0; i < <%=howmanybook%>; i++) { %>
											<table>
													<div class="col-8 col-12-medium imp-medium" id="name">
														<header><h3><a href="../product/product.html"><%=book.name%></a></h3></header>
													</div>
													<a href="../product/product.html" class="image left"><img src="../static/images/pic10.jpg" alt=""></a>
													<p class="bid" id="bid">書籍編號：<%=book.no%></p>
													<p class="author">作者：<%=book.writer%></p>
													<p class="price">價錢：<%=book.money%></p>
													<ul class="actions">
																<li>
																	<div class="display-flex">
																		<div id="addcart" class="col-8 col-12-medium imp-medium">
																			<a href="../cart/cart.html" class="button style1 large">加入購物車</a>
																		</div>
																		<div id="outcollect" class="col-8 col-12-medium imp-medium">
																			<a href="#" class="button style2 large">移除收藏</a>
																		</div>
																	</div>
																</li>
													</ul>
											</table>
											<% }}%>
											<%else{%>
												<section id="features">
													<div class="container">
														<header>
															<h2> <strong>目前收藏沒有商品喔</strong>!</h2>
														</header>
													</div>
													<div class="col-8 col-24-small" >
														<a  href="../home/home.html" class="button style2 large">去首頁逛逛</a>
													</div>
												</section>
												<%}%>
										</article>
								</div>
								</article>
						</div>
					</div>
				</section>
			<!-- Footer -->
			<%- include('./partials/footer.ejs') %>

		</div>


		<!-- Scripts -->
		<script src="../static/js/jquery.min.js"></script>
		<script src="../static/js/jquery.dropotron.min.js"></script>
		<script src="../static/js/browser.min.js"></script>
		<script src="../static/js/breakpoints.min.js"></script>
		<script src="../static/js/util.js"></script>
		<script src="../static/js/main.js"></script>

	</body>
</html>