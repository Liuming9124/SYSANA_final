<!DOCTYPE HTML>
<html>

<head>
	<title>書贏●我的收藏</title>
	<%- include('./partials/header.ejs') %>

<body class="homepage is-preload">
	<div id="page-wrapper">

		<!-- Header -->
		<section id="header">
			<div class="container">

				<!-- Logo -->
				<h1 id="logo"><a href="/collect">書贏●我的收藏</a></h1>
				<%- include('./partials/nav.ejs') %>

					<!-- Main -->
					<section id="main">
						<div class="container">
							<div class="row">

								<!-- Sidebar -->
								<div id="sidebar" class="col-4 col-12-medium">

									<section>
										<ul class="divided">
											<li>
												<!-- Excerpt -->
													<article class="box excerpt">
														<a href="/cart" >
															<div class="display-flex">
																<img src="../static/images/cart.png" href="/cart" style="width:80px;height:80px;" alt="我的購物車">
																<div href="/cart">
																	<br><p>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp我的購物車</p>
																</div>
															</div>
														</a>
													</article>
											</li>
											<li>
												<!-- Excerpt -->
													<article class="box excerpt">
														<a href="/collect" >
															<div class="display-flex">
																<img src="../static/images/collect.png" href="/collect" style="width:80px;height:80px;" alt="我的收藏">
																<div href="/collect">
																	<br><p>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp我的收藏</p>
																</div>
															</div>
														</a>
													</article>
											</li>

											<li>
												<!-- Excerpt -->
													<article class="box excerpt">
														<a href="/order" >
															<div class="display-flex">
																<img src="../static/images/list.png" href="/order" style="width:80px;height:80px;" alt="我的訂單">
																<div href="/order">
																	<br><p>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp我的訂單</p>
																</div>
															</div>
														</a>  
													</article>
											</li>

									</section>
								</div>

								<!-- Content -->
								<div id="content" class="col-8 col-12-medium imp-medium">
									<!-- Post -->
									<article class="box post">
										<p>
											<%=collectstatus%>
										</p>

										<%if (result) { %>
											<table>
												<% for(var i=0; i < result.length; i++) { %>
													<div class="col-8 col-12-medium imp-medium" id="name">
														<header>
															<h3><a href="/product">
																<%=result[i].book_name%></a></h3>
														</header>
													</div>
													<a href="/product/<%= result[i].book_id%>" class="image left">
														<img src="/static/BookImg/<%=result[i].book_id%>.jpg" style="width:200px;height:200px;" alt="">
													</a>
													<br>

													<p class="bid" id="bid">
														書籍編號：<%= result[i].book_id%>
													</p>
													<p class="author">
														作者：<%= result[i].book_author%>
													</p>
													<p class="price">
														價錢：<%= result[i].book_price%>
													</p>
													<ul class="actions">
														<li>
															<div class="display-flex">
																<div id="addcart" class="col-8 col-12-medium imp-medium">
																	<a href="/cart/add/<%= result[i].book_id %> " class="button style1 large">
																		加入購物車
																	</a>
																</div>
																<a>&nbsp</a>
																<div id="outcollect" class="col-8 col-12-medium imp-medium">
																	<a href="/collect/del/<%= result[i].book_id%>" class="button style2 large">
																		移除收藏
																	</a>
																</div>
															</div>
														</li>
													</ul>
												<% } %>
											</table>
										<% }%>
										<% if (result.length == 0) { %>
											<section id="features">
												<div class="container">
													<header>
														<h2> <strong>目前收藏沒有商品喔</strong>!</h2>
													</header>
												</div>
												<div class="col-8 col-24-small">
													<a href="/home" class="button style2 large">去首頁逛逛</a>
												</div>
											</section>
										<%}%>
									</article>
								</div>
								</article>
							</div>
						</div>
					</section>
					<!-- Footer -->
					<%- include('./partials/footer.ejs') %>

			</div>


			<!-- Scripts -->
			<script src="../static/js/jquery.min.js"></script>
			<script src="../static/js/jquery.dropotron.min.js"></script>
			<script src="../static/js/browser.min.js"></script>
			<script src="../static/js/breakpoints.min.js"></script>
			<script src="../static/js/util.js"></script>
			<script src="../static/js/main.js"></script>

</body>

</html>