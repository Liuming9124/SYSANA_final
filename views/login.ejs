<!DOCTYPE HTML>
<html>
	<head>
		<title>書贏●登入</title>
		<%- include('./partials/header.ejs') %>

	<body class="homepage is-preload">
		<div id="page-wrapper">

			<!-- Header -->
			<section id="header">
				<div class="container">
					
					<!-- Logo -->
					<h1 id="logo"><a href="/home">書贏●登入</a></h1>
					<%- include('./partials/nav.ejs') %>
	
					<!-- Main -->
				<section id="main">
					<div class="container_1">
						<!-- Content -->
							

								<!-- Post -->
									<article class="box post">
										<header>
											<h1 style="height: 60px;"><font size=8>會員登入</font></h1>
										</header>
										<form action="/login/userlogin" method="POST">
											<div style="height: 60px;" class="container_1">
												<input  type="text" id="username" placeholder="帳號" size=20 autocomplete="on" name="username" style="width:700px;height:60px;font-size:20px;" required="true">
											</div>
											<br>
											<div style="height: 60px;" class="container_1">
												<input type="password" id="password" placeholder="密碼" size=20 autocomplete="off" name="password" style="width:700px;height:60px;font-size:20px;" required="true">
											</div>
											<br>
											<div class="display-flex">
												<div class="login" id="loginbutton">
													<input type="submit" value="登入" style="width:400px;height:80px;font-size:27px;">
												</div>
												<a>&nbsp</a>
												<div id="register" >
													<a href="/register" class="button style2 large" style="width:300px;height:80px;font-size:30px;">註冊會員</a>
												</div>
											</div>
											<p><%=loginstatus%></p>
										</form>	
										

									</article>
						
					</div>
				</section>
			<!-- Footer -->
			<%- include('./partials/footer.ejs') %>	

		</div>

		<!-- Scripts -->
		<script src="../static/js/jquery.min.js"></script>
		<script src="../static/js/jquery.dropotron.min.js"></script>
		<script src="../static/js/browser.min.js"></script>
		<script src="../static/js/breakpoints.min.js"></script>
		<script src="../static/js/util.js"></script>
		<script src="../static/js/main.js"></script>

	</body>
</html>