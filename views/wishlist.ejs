<!DOCTYPE HTML>
<html>
	<head>
		<title>書贏●許願清單</title>
		<%- include('./partials/header.ejs') %>
	<body class="homepage is-preload">
		<div id="page-wrapper">

			<!-- Header -->
			<section id="header">
				<div class="container">
					
					<!-- Logo -->
						<h1 id="logo"><a href="/wishlist">書贏●許願清單</a></h1>
						<%- include('./partials/nav.ejs') %>
			
			<!-- Main -->
			<section id="main">
				<div class="container">
					<div class="row">

						<!-- Sidebar -->
						<div id="sidebar" class="col-4 col-12-medium">

							<section>
								<ul class="divided">
									<li>

										<!-- Excerpt -->
										<article class="box excerpt">
											<header>
												<span class="date">我的錢包</span>
											</header>
											<nobr>
												<p>目前擁有</p>
												<div class="box excerpt" id="bookcoin">
													<p><strong>
															<%=bookcoin%>
														</strong></p>
												</div>
												<p>book幣</p>
											</nobr>
										</article>
									</li>

									<li>

										<!-- Excerpt -->
										<article class="box excerpt">
											<header>
												<span class="date" href="#">每日簽到</span>
												<div class="box excerpt" id="signin">
													<h3><a href="#" class="button style1">點擊簽到</a></h3>
												</div>
											</header>
										</article>

											<!-- Excerpt -->
												<article class="box excerpt">
													<header>
														<h3><a href="/collect" class="date">交換書功能</a></h3>
														<h3><a href="/chbook">讓您與書友友進一步交流</a></h3>
													</header>
												</article>

										

											<!-- Excerpt -->
												<article class="box excerpt">
													<header>
														<h3><a href="/rebook" class="date">回收書功能</a></h3>
														<h3><a href="/rebook">讓書呈現善的循環</a></h3>
													</header>
												</article>

										

											<!-- Excerpt -->
												<article class="box excerpt">
													<header>
														<h3><a href="/wishlist" class="date">許願功能</a></h3>

														<h3><a href="/wishlist">許下你想購買的書</a></h3>
													</header>
												</article>
												<li>

													<!-- Excerpt -->
														<article class="box excerpt">
															<header>
																<h3><a href="/cart" class="date">我的購物車</a></h3>
																<h3><a href="/cart">快來把商品帶回家</a></h3>
															</header>
														</article>

												</li>

												<li>
													<!-- Excerpt -->
														<article class="box excerpt">
															<header>
																<h3><a href="/collect" class="date">我的收藏</a></h3>
																<h3><a href="/collect">快來把收藏加入購物車</a></h3>
															</header>
														</article>

												</li>


									</li>
									<li>

										<!-- Excerpt -->
										<article class="box excerpt">
											<header>
												<h3><a href="/order" class="date">我的訂單</a></h3>
												<h3><a href="/order">查看我的訂單狀態</a></h3>
											</header>
										</article>

									</li>
								</ul>
							</section>



						</div>

											<!-- Post -->
						<article class="box post">
							<header>
								<h1><strong>書籍資訊：</strong></h1>
							</header>
							<div class="col-6 col-12-medium">
								<section>
									<form method="" action="POST">
										<div class="row gtr-45">
											<div class="col-6 col-12-small">
												<p>書籍名稱：<input  type="text" id="name" placeholder="商品名稱" size=5 autocomplete="on" name="name">
												</div></p>
											<div class="col-6 col-12-small">
												<p>作者：<input  type="text" id="writer" placeholder="作者" size=5 autocomplete="on" name="writer">
												</div></p>
										</div>
										<p>許願後將扣除<strong>book幣一枚</strong></p>
							<ul class="actions">
								<li>
									<div class="display-flex">
										<div id="enter" class="actions">
											<a href="#" class="button style1 large">確定</a>
										</div>
										<a>&nbsp</a>
										<div id="cancel" class="actions">
											<a href="#" class="button style2 large">取消</a>
										</div>
									</div>
								</li>
							</ul>
									</form>
								</section>
						</article>

					</div>
				</div>
			</section>
			<!-- Footer -->
			<%- include('./partials/footer.ejs') %>
		</div>

		<!-- Scripts -->
			<script src="assets/js/jquery.min.js"></script>
			<script src="assets/js/jquery.dropotron.min.js"></script>
			<script src="assets/js/browser.min.js"></script>
			<script src="assets/js/breakpoints.min.js"></script>
			<script src="assets/js/util.js"></script>
			<script src="assets/js/main.js"></script>

	</body>
</html>