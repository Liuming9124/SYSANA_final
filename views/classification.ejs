<html>
	<head>
		<title>書贏●分類</title>
		<%- include('./partials/header.ejs') %>
	</head>
	<body class="homepage is-preload">
		<div id="page-wrapper">

			<!-- Header -->
				<section id="header">
					<div class="container">
						<!-- Logo -->
						<h1><a href="/classification" id="logo">書贏●分類</a></h1>
						<%- include('./partials/nav.ejs') %>
					</div>
				</section>
					<!-- books -->
						<section id="features">
							<header class="style1">
								<h2>商品分類頁面</h2>
							</header>
							<!-- books1 -->
							<h3><%= type[0].book_type %> </h3><br>
							<div class="container">
								<div class="row aln-center">
									<% for (var i=0 ; i < type.length ; i++) { %>
										<div class="col-3 col-12-medium">
											<section class="books">
											<a href="/product/<%= type[i].book_id%>" class="image featured">
												<img class="imgsrc" src="/static/BookImg/<%=type[i].book_img%>" alt="" style="width:240px;height:310px;">
											</a>
											<h3><a class="name" id="name">商品名稱:<%=type[i].book_name%> </a></h3>
											<p class="author" id="author">作者：<%=type[i].book_author%></p>
											<p class="price" id="price">價錢：<%=type[i].book_price%> </p>
											<ul class="actions">
												<li>
													<div class="display-flex">
														<div id="addcollect" class="col-8 col-12-medium imp-medium">
															<a href="/collect" class="button style1 large" style="width:120px;height:40px;font-size:8px;">加入收藏</a>
														</div>
														<a>&nbsp</a>

														<div id="addcart" class="col-8 col-12-medium imp-medium">
															<a href="/cart/add/<%= type[i].book_id%>" class="button style2 large" style="width:120px;height:40px;font-size:8px;">加入購物車</a>
														</div>
													</div>
												</li>
											</ul>
										</section>
									</div>
									<% } %>
								</div>
						</section>

				</div>
			</section>
			<!-- Footer -->
			<%- include('./partials/footer.ejs') %>
		

			<!-- Scripts -->
			<script src="../static/js/jquery.min.js"></script>
			<script src="../static/js/jquery.dropotron.min.js"></script>
			<script src="../static/js/browser.min.js"></script>
			<script src="../static/js/breakpoints.min.js"></script>
			<script src="../static/js/util.js"></script>
			<script src="../static/js/main.js"></script>
		</div>
	</body>
</html>