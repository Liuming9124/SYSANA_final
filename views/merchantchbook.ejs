<html>
	<head>
		<title>書贏●商家頁面-交換書</title>
		<%- include('./partials/headermerch.ejs') %>
	<body class="homepage is-preload">
		<div id="page-wrapper">

			

			<!-- Header -->
				<section id="header">
					<div class="container">

						<!-- Logo -->
						<h1 id="logo"><a href="/merchant">書贏●商家頁面-交換書</a></h1>
						
						<!-- Nav -->
						<%- include('./partials/navmerch.ejs') %>
						<!-- Main -->
				
				<section id="main">
					
				<div class="container">
					<div class="container_1">
					<form action="/search" method="POST">
						>
						
						<div class="display-flex">
							<div class="container" id="search">
								<input type="text" id="search" placeholder="" style="width:600px;height:60px;">
							</div>
							<div class="container" id="searchbottom">
								<a href="#" class="button style1 col-10-small" style="width:200px;height:60px;">搜尋</a>
							</div>
						</div>
						</div>
					</form>
					<section id="feature">
						<div class="container_1">
							<input  class="button_1"type="button" value="待入庫" style="width:200px;height:50px;">
							<input class="button_1"type="button" value="等待交換中" style="width:200px;height:50px;">
						</div>
					</section>
					<br>
					<div class="container_1">
						<header>
							<h2>查看交換書資料：</h2>
						</header>
					</div>
					
					<div class="row ">
						<table>
							<% for (var i=0 ; i < result.length ; i++) { %>
								<div class="col-4 col-12-medium">
									<a href="#" class="image left"><img src="../static/images/<%=result[i].book_img%>" alt=""></a>
									<h3><strong><a class="username" id="username">交換用戶: <%=result[i].ch_name%></a></strong></h3>
									<div class="chbookname">
										<p id="chbookname">交換書籍: <%=result[i].ch_bname%></p>
									</div>
									
									<div class="address">
										<p id="address">收件地址: <%=result[i].ch_address%></p>
									</div>
									<div class="price">
										<p id="down">書籍價格區間: <%=result[i].ch_bprice%></p>
									</div>
									
									<ul class="actions">
										<li>
											<form action="" method="POST">
												<div style="height: 60px;" class="actions">
													<input  type="text" id="reply" placeholder="拒絕交換原因(同意則不填)" size=30 autocomplete="on" name="reply">
												</div>
												<div class="display-flex">
													<div id="allowexchange" class="box post">
														<a href="/merchant/chbook/confirm/<%= result[i].ch_id %> " class="button style1 large">允許交換</a>
													</div>
													<a>&nbsp</a>
													<div id="refuseexchange" class="box post">
														<a href="/merchant/chbook/cancel/<%= result[i].ch_id %> " class="button style2 large">拒絕交換</a>
													</div>
												</div>
												
											</form>
										</li>
									</ul>
								</div>
							<% } %>
						</table>
					</div>
				</div>
			</section>
		<!-- Scripts -->
			<script src="assets/js/jquery.min.js"></script>
			<script src="assets/js/jquery.dropotron.min.js"></script>
			<script src="assets/js/browser.min.js"></script>
			<script src="assets/js/breakpoints.min.js"></script>
			<script src="assets/js/util.js"></script>
			<script src="assets/js/main.js"></script>

	</body>
</html>