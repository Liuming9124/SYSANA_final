<!DOCTYPE HTML>
<html>
	<head>
		<title>書贏●回收</title>
		<%- include('./partials/header.ejs') %>
	<body class="homepage is-preload">
		<div id="page-wrapper">

			<!-- Header -->
			<section id="header">
				<div class="container">
					
					<!-- Logo -->
						<h1 id="logo"><a href="/home">書贏●二手書回收</a></h1>
						<%- include('./partials/nav.ejs') %>
	
					<!-- Main -->
			<section id="main">
				<div class="container">
					<div class="row">

						<!-- Sidebar -->
							<div id="sidebar" class="col-4 col-12-medium">

									<section>
										<ul class="divided">
											<li>

												<!-- Excerpt -->
												<article class="box excerpt">
													<header>
														<span class="date" >我的錢包</span>
													</header>
													<nobr>
														<p>目前擁有</p>
														<div class="box excerpt" id="bookcoin">
															<p><strong><%=bookcoin%></strong></p>
														</div>
														<p>book幣</p>
													</nobr>
												</article>
											</li>
											
											<li>

												<!-- Excerpt -->
													<article class="box excerpt">
														<header>
															<span class="date" href="#">每日簽到</span>
															<div class="box excerpt" id="signin">
																<h3><a href="#" class="button style1">點擊簽到</a></h3>
															</div>
														</header>
													</article>

											</li>
											<li>

												<!-- Excerpt -->
													<article class="box excerpt">
														<header>
															<span class="date" href="#">交換書功能</span>
															<h3><a href="/chbook">讓您與書友友進一步交流</a></h3>
														</header>
													</article>

											</li>
											
											<li>

												<!-- Excerpt -->
													<article class="box excerpt">
														<header>
															<span class="date" href="../wishlist/wishlist.html">許願功能</span>
															<h3><a href="/wishlist">許下你想購買的書</a></h3>
														</header>
													</article>

											</li>
											<li>

												<!-- Excerpt -->
													<article class="box excerpt">
														<header>
															<span class="date" href="../order/order.html">我的訂單</span>
															<h3><a href="/order">查看我的訂單狀態</a></h3>
														</header>
													</article>

											</li>
										</ul>
									</section>

							

							</div>
					<!-- Content -->
						

							<!-- Post -->
								<article class="box post">
									<header>
										<h1 style="height: 60px; width: 300px;"><font size=8>書籍回收</font></h1>
									</header>
									<form action="" method="POST">
										<a>書名:</a>
										<div style="height: 60px; width: 265px;" class="box post">

											<input  type="text" id="re_name" placeholder="請輸入書名" size=20 autocomplete="on" name="re_name">
										</div>
										<a>原價:</a>
										<div style="height: 60px; width: 265px;" class="box post" >
											
											<input type="text" id="price" placeholder="請輸入原價" size=20 autocomplete="off" name="price">
										</div>
										<a>書況:</a>
										<div style="height: 60px; width: 265px;" class="box post" id="bookcondition" name="bookcondition">
											
											<select >
											<option>請選擇書籍狀況</option>
											<option>全新</option>
											<option>7成~9成</option>
											<option>5成~7成</option>	
										</select>
										</div>
										<div class="display-flex">
											<div class="box post" id="recyclebutton">
												<input type="submit" value="回收" onclick="alert('test!!')">
											</div>
											<a>&nbsp</a>
											<div class="box post" id="resetbutton">
												<input type="reset" value="清除">
											</div>
										</div>
									</form>	
								</article>
								
									
				</div>
			</section>

							
			<!-- Footer -->
			<%- include('./partials/footer.ejs') %>	
		</div>

		<!-- Scripts -->
		<script src="../static/js/jquery.min.js"></script>
		<script src="../static/js/jquery.dropotron.min.js"></script>
		<script src="../static/js/browser.min.js"></script>
		<script src="../static/js/breakpoints.min.js"></script>
		<script src="../static/js/util.js"></script>
		<script src="../static/js/main.js"></script>

	</body>
</html>