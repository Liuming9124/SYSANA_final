<!DOCTYPE HTML>
<html>
	<head>
		<title>書贏●回收</title>
		<%- include('./partials/header.ejs') %>
	<body class="homepage is-preload">
		<div id="page-wrapper">

			<!-- Header -->
			<section id="header">
				<div class="container">
					
					<!-- Logo -->
						<h1 id="logo"><a href="/home">書贏●二手書回收</a></h1>
						<%- include('./partials/nav.ejs') %>
	
					<!-- Main -->
			<section id="main">
				<div class="container">
					<div class="row">

						<%- include('./partials/mempart.ejs') %>
										</ul>
									</section>
							</div>
					<!-- Content -->
						

							<!-- Post -->
								<article class="box post">
									<header>
										<h1 style="height: 60px; width: 300px;"><font size=8>書籍回收</font></h1>
									</header>
									<form action="/rebook/add" method="POST">

										<a>書名:</a>
										<div style="height: 60px; width: 265px;" class="box post">
											<input  type="text" id="re_name" placeholder="請輸入書名" size=20 autocomplete="on" name="re_name">
										</div>

										<a>作者:</a>
										<div style="height: 60px; width: 265px;" class="box post">
											<input  type="text" id="re_author" placeholder="請輸入作者" size=20 autocomplete="on" name="re_author">
										</div>

										<a>原價:</a>
										<div style="height: 60px; width: 265px;" class="box post" >
											<input type="text" id="re_price" placeholder="請輸入原價" size=20 autocomplete="off" name="re_price">
										</div>

										<a>書況:</a>
										<div style="height: 60px; width: 265px;" class="box post" id="re_status">
											<select name="re_status" >
												<option>請選擇書籍狀況</option>
												<option>全新</option>
												<option>7成~9成</option>
												<option>5成~7成</option>	
											</select>
										</div>

										<div class="popup" id="show"  onclick="show()">
											<br><input type="reset" value="顯示預估獲得點數">
											<br><br>估計可以獲得<span class="popuptext" id="popup_text"><strong>多少</strong></span>點
										</div>

										<a>&nbsp</a>
										<div class="display-flex">
											<div class="box post" id="recyclebutton">
												<input type="submit" value="回收">
											</div>
											<a>&nbsp</a>
											<div class="box post" id="resetbutton">
												<input type="reset" value="清除">
											</div>
										</div>
									</form>	
								</article>
								
									
				</div>
			</section>

							
			<!-- Footer -->
			<%- include('./partials/footer.ejs') %>	
		</div>
		<script>
			function show() {
				var popup = document.getElementById("popup_text");
				popup.classList.toggle("show");
			}
		</script>
		
		<!-- Scripts -->
		<script src="../static/js/jquery.min.js"></script>
		<script src="../static/js/jquery.dropotron.min.js"></script>
		<script src="../static/js/browser.min.js"></script>
		<script src="../static/js/breakpoints.min.js"></script>
		<script src="../static/js/util.js"></script>
		<script src="../static/js/main.js"></script>

	</body>
</html>