<!DOCTYPE HTML>
<html>
	<head>
		<title>書贏●註冊</title>
		<%- include('./partials/header.ejs') %>
		<!-- <script src="../static/js/register.js"></script> -->
	</head>
	<body class="homepage is-preload">
		<div id="page-wrapper">

			<!-- Header -->
			<section id="header">
				<div class="container">
					<!-- Logo -->
					<h1 id="logo"><a href="/home">書贏●註冊</a></h1>
					<%- include('./partials/nav.ejs') %>
				</div>
			</section>
					<!-- Main -->
				<section id="main">
					<div class="container_1">
						<!-- Content -->
							

								<!-- Post -->
									<article class="pricing-item">
										<header>
											<h1 style="height: 60px;"><font size=8>加入會員</font></h1>
										</header>
										<form action="/register/add" method="POST" onsubmit="return compare()">
											<a>電子信箱:</a>
											<div style="height: 60px; width: 265px;" class="box post">
												<input type="email" id="email" placeholder="信箱" size=20 autocomplete="on" name="email" required="true">
											</div>
											<a>密碼:</a>
											<div style="height: 60px; width: 265px;" class="box post">
												<input type="password" id="password" placeholder="密碼" size=20 autocomplete="off" name="password" required="true" >
											</div>
											<a>確認密碼:</a>
											<div style="height: 60px; width: 265px;" class="box post">
												<input type="password" id="password1" placeholder="密碼" size=20 autocomplete="off" name="password1" required="true" >
											</div>
											<a>姓名:</a>
											<div style="height: 60px; width: 265px;" class="box post">
												<input type="text" id="name" placeholder="姓名" size=20 autocomplete="on" name="name" required="true" >
											</div>
											<a>電話號碼:</a>
											<div style="height: 60px; width: 265px;" class="box post">
												<input type="text" id="phone" placeholder="電話" size=20 autocomplete="on" name="phone" required="true" oninput = "value=value.replace(/[^\d]/g,'')" >
											</div>
											<a>地址:</a>
											<div style="height: 60px; width: 265px;" class="box post">
												<input type="text" id="address" placeholder="地址" size=20 autocomplete="on" name="address" required="true">
											</div>
											
											<div  class="box post"  >
												<input id="registerbutton"type="submit" value="註冊" >
											</div>
										</form>
										<h3>
											<div  class="box post">
												<a href="/login"><%= result %></a>
											</div>	
										</h3>
									</article>
										
							
					</div>
				</section>

							
			<!-- Footer -->
			<%- include('./partials/footer.ejs') %>	

		

			<!-- Scripts -->
			<script src="../static/js/jquery.min.js"></script>
			<script src="../static/js/jquery.dropotron.min.js"></script>
			<script src="../static/js/browser.min.js"></script>
			<script src="../static/js/breakpoints.min.js"></script>
			<script src="../static/js/util.js"></script>
			<script src="../static/js/main.js"></script>
			<script src="../static/js/register.js"></script>
		</div>	
	</body>
</html>